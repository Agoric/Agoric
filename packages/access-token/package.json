    "lint-fix": "eslint --fix '**/*.js'",
    "lint-check": "eslint '**/*.js'"
  },
  "dependencies": {
    "@agoric/assert": "^0.2.12",
    "n-readlines": "^1.0.0"
  },
  "devDependencies": {
