{
  "name": "@agoric/swing-store-simple",
  "version": "0.3.9",
  "description": "Persistent storage for SwingSet, based on a Map, optionally backed by a simple JSON file",
  "parsers": {
    "js": "mjs"
  },
  "type": "module",
  "main": "simpleSwingStore.js",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "author": "Agoric",
  "license": "Apache-2.0",
  "scripts": {
    "build": "exit 0",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0",
    "lint-fix": "eslint --fix '**/*.js'",
    "lint-check": "eslint '**/*.js'"
  },
  "dependencies": {
    "n-readlines": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^3.12.1",
    "esm": "^3.2.25"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": [
      "esm"
    ],
    "timeout": "2m"
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  }
}
